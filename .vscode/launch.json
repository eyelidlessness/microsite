{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "console": "integratedTerminal",
      "name": "Run tests",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": [
        "run",
        "test",
        "--stream"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "console": "integratedTerminal",
      "name": "Run tests (watch mode)",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": [
        "run",
        "test:watch",
        "--stream"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
